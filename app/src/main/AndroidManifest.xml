<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ngw.toowyn">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.ngw.toowyn.ToowynApplication"
        android:allowBackup="true"
        android:icon="@drawable/common_google_signin_btn_icon_light_disabled"
        android:label="toowyn"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar">


        <meta-data
            android:name="com.locator_app.locator.customglide.LocatorGlideModule"
            android:value="GlideModule" />
        <activity
            android:name="com.ngw.toowyn.view.cardstack.CardActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>