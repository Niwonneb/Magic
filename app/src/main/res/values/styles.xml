        <item name="android:colorPrimaryDark">@color/fbutton_color_silver</item>
        <item name="android:colorAccent">#64FFDA</item>
        <item name="android:windowBackground">@color/fbutton_color_clouds</item>
        <item name="android:windowTranslucentStatus">true</item>
